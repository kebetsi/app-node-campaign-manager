    "babel-preset-flow": "^6.23.0",
    "dumper.js": "^0.1.1",
    "eslint": "^5.3.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "flow-bin": "^0.70.0",
    "flow-coverage-report": "^0.5.0",
    "flow-remove-types": "^1.2.3",
    "flow-typed": "^2.4.0",
    "mocha": "^5.1.1",
    "should": "^13.2.1",
    "supertest": "^3.0.0"
  },
  "dependencies": {
