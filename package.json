  "license": "none",
  "private": true,
  "scripts": {
    "start": "node dist/src/server.js",
    "flow": "./node_modules/.bin/flow --color=always",
    "flow:deps": "./node_modules/flow-typed/dist/cli.js install",
    "watch": "node_modules/.bin/babel --watch=./code --out-dir=dist --copy-files",
    "test": "NODE_ENV=dev ./node_modules/.bin/mocha dist/test/**/*.test.js",
    "testOne": "NODE_ENV=dev ./node_modules/.bin/mocha",
    "flow-coverage": "node_modules/.bin/flow-coverage-report -i 'code/src/**/*.js' -t html",
    "release": "node_modules/.bin/babel code --out-dir lib --copy-files",
    "lint": "node_modules/eslint/bin/eslint.js code/**"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.6",
